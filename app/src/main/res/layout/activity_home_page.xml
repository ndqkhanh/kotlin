<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="242dp"
        app:srcCompat="@drawable/curved_bg"/>

    <RelativeLayout
        android:id="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/logo" />
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/login_home"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <TextView
        android:id="@+id/slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Cam kết hoàn 150% nếu nhà xe không giữ vé"
        android:textColor="#fff"
        android:fontFamily="@font/montserrat_light"
        android:layout_marginHorizontal="20dp"
        android:layout_centerVertical="true"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:textSize="17sp" />
    <LinearLayout
        android:id="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/slogan"
        android:layout_height="210dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/panel"
        android:elevation="10dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location"/>
            <ImageView
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location"/>
            <ImageView
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Nơi xuất phát"
                    android:fontFamily="@font/montserrat_light"
                    android:layout_marginLeft="3dp"
                    android:textColor="#777"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#efefef"
                    android:shadowColor="#fff"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Hà Nội"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Bạn muốn đi đâu?"
                    android:fontFamily="@font/montserrat_light"
                    android:layout_marginLeft="3dp"
                    android:textColor="#777"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#efefef"
                    android:shadowColor="#fff"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Hà Giang"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Ngày đi"
                    android:fontFamily="@font/montserrat_light"
                    android:layout_marginLeft="3dp"
                    android:textColor="#777"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#efefef"
                    android:shadowColor="#fff"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="T6, 21/04/2023"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/searchBus"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:layout_marginTop="20dp"
        android:text="Tìm vé"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#fff"
        android:background="@drawable/panel"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/view"
        />
</androidx.constraintlayout.widget.ConstraintLayout>