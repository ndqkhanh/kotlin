<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/addBtnAdminBusCreateBtn"
        android:layout_width="336dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:text="ADD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/logOutAdminBusCreateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Log out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adminBusInfoCreateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Bus Information"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logOutAdminBusCreateBtn" />

    <TextView
        android:id="@+id/busInfoBusOpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Bus Operator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminBusInfoCreateTV" />

    <Spinner
        android:id="@+id/adminBusOpCreateSpinner"
        android:layout_width="250dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/busInfoBusOpTitle"
        app:layout_constraintTop_toTopOf="@+id/busInfoBusOpTitle" />

    <TextView
        android:id="@+id/busInfoStartPointTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Start Point"
        app:layout_constraintStart_toStartOf="@+id/busInfoBusOpTitle"
        app:layout_constraintTop_toBottomOf="@+id/busInfoBusOpTitle" />

    <Spinner
        android:id="@+id/adminBusStartPointCreateSpinner"
        android:layout_width="250dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="@+id/adminBusOpCreateSpinner"
        app:layout_constraintTop_toTopOf="@+id/busInfoStartPointTitle" />

    <TextView
        android:id="@+id/busInfoEndPointTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="End Point"
        app:layout_constraintStart_toStartOf="@+id/busInfoStartPointTitle"
        app:layout_constraintTop_toBottomOf="@+id/busInfoStartPointTitle" />

    <Spinner
        android:id="@+id/adminBusEndPointCreateSpinner"
        android:layout_width="250dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="@+id/adminBusStartPointCreateSpinner"
        app:layout_constraintTop_toTopOf="@+id/busInfoEndPointTitle" />

    <TextView
        android:id="@+id/busInfoStartTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Start Time"
        app:layout_constraintStart_toStartOf="@+id/busInfoEndPointTitle"
        app:layout_constraintTop_toBottomOf="@+id/busInfoEndPointTitle" />

    <EditText
        android:id="@+id/adminBusStartTimeCreateET"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintStart_toStartOf="@+id/adminBusEndPointCreateSpinner"
        app:layout_constraintTop_toTopOf="@+id/busInfoStartTimeTitle" />

    <EditText
        android:id="@+id/adminBusStartDateCreateET"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintStart_toEndOf="@+id/adminBusStartTimeCreateET"
        app:layout_constraintTop_toTopOf="@+id/adminBusStartTimeCreateET" />

    <TextView
        android:id="@+id/busInfoEndTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="End Time"
        app:layout_constraintStart_toStartOf="@+id/busInfoStartTimeTitle"
        app:layout_constraintTop_toBottomOf="@+id/busInfoStartTimeTitle" />

    <EditText
        android:id="@+id/adminBusEndTimeET"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintStart_toStartOf="@+id/adminBusStartTimeCreateET"
        app:layout_constraintTop_toTopOf="@+id/busInfoEndTimeTitle" />

    <EditText
        android:id="@+id/editTextDate2"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintStart_toEndOf="@+id/adminBusEndTimeET"
        app:layout_constraintTop_toTopOf="@+id/adminBusEndTimeET" />

    <TextView
        android:id="@+id/busInfoImageLinkTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Image URL"
        app:layout_constraintStart_toStartOf="@+id/busInfoEndTimeTitle"
        app:layout_constraintTop_toBottomOf="@+id/busInfoEndTimeTitle" />

    <EditText
        android:id="@+id/adminBusImageCreateET"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginTop="-8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/adminBusEndTimeET"
        app:layout_constraintTop_toTopOf="@+id/busInfoImageLinkTitle" />

    <TextView
        android:id="@+id/busInfoPolicyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Policy"
        app:layout_constraintStart_toStartOf="@+id/busInfoImageLinkTitle"
        app:layout_constraintTop_toBottomOf="@+id/busInfoImageLinkTitle" />

    <EditText
        android:id="@+id/adminBusPolicyCreateET"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="@+id/adminBusImageCreateET"
        app:layout_constraintTop_toTopOf="@+id/busInfoPolicyTitle" />

    <TextView
        android:id="@+id/busInfoNumsOfSeatTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Num of seats"
        app:layout_constraintStart_toStartOf="@+id/busInfoPolicyTitle"
        app:layout_constraintTop_toBottomOf="@+id/busInfoTypeTitle" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/adminBusTypeCreateSpinner"
        app:layout_constraintTop_toTopOf="@+id/busInfoNumsOfSeatTitle" />

    <TextView
        android:id="@+id/busInfoTypeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="52dp"
        android:text="Type"
        app:layout_constraintStart_toStartOf="@+id/busInfoPolicyTitle"
        app:layout_constraintTop_toBottomOf="@+id/busInfoPolicyTitle" />

    <Spinner
        android:id="@+id/adminBusTypeCreateSpinner"
        android:layout_width="250dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="@+id/adminBusPolicyCreateET"
        app:layout_constraintTop_toTopOf="@+id/busInfoTypeTitle" />

    <TextView
        android:id="@+id/busInfoPriceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Price"
        app:layout_constraintStart_toStartOf="@+id/busInfoNumsOfSeatTitle"
        app:layout_constraintTop_toBottomOf="@+id/busInfoNumsOfSeatTitle" />

    <EditText
        android:id="@+id/adminBusPriceCreateET"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName4"
        app:layout_constraintTop_toTopOf="@+id/busInfoPriceTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>