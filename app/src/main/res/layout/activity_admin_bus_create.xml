<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/addBtnAdminBusCreateBtn"
        android:layout_width="336dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:text="ADD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/logOutAdminBusCreateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Log out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adminBusInfoCreateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Thông tin chuyến xe"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logOutAdminBusCreateBtn" />

    <TextView
        android:id="@+id/adminBusOpCreateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Nhà xe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminBusInfoCreateTV" />

    <Spinner
        android:id="@+id/adminBusOpCreateSpinner"
        android:layout_width="250dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/adminBusOpCreateTV"
        app:layout_constraintTop_toTopOf="@+id/adminBusOpCreateTV" />

    <TextView
        android:id="@+id/adminBusStartPointCreateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Điểm đi"
        app:layout_constraintStart_toStartOf="@+id/adminBusOpCreateTV"
        app:layout_constraintTop_toBottomOf="@+id/adminBusOpCreateTV" />

    <Spinner
        android:id="@+id/adminBusStartPointCreateSpinner"
        android:layout_width="250dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="@+id/adminBusOpCreateSpinner"
        app:layout_constraintTop_toTopOf="@+id/adminBusStartPointCreateTV" />

    <TextView
        android:id="@+id/adminBusEndPointCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Điểm đi"
        app:layout_constraintStart_toStartOf="@+id/adminBusStartPointCreateTV"
        app:layout_constraintTop_toBottomOf="@+id/adminBusStartPointCreateTV" />

    <Spinner
        android:id="@+id/adminBusEndPointCreateSpinner"
        android:layout_width="250dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="@+id/adminBusStartPointCreateSpinner"
        app:layout_constraintTop_toTopOf="@+id/adminBusEndPointCreate" />

    <TextView
        android:id="@+id/adminBusStartTimeCreateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Giờ đi"
        app:layout_constraintStart_toStartOf="@+id/adminBusEndPointCreate"
        app:layout_constraintTop_toBottomOf="@+id/adminBusEndPointCreate" />

    <EditText
        android:id="@+id/adminBusStartTimeCreateET"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintStart_toStartOf="@+id/adminBusEndPointCreateSpinner"
        app:layout_constraintTop_toTopOf="@+id/adminBusStartTimeCreateTV" />

    <EditText
        android:id="@+id/adminBusStartDateCreateET"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintStart_toEndOf="@+id/adminBusStartTimeCreateET"
        app:layout_constraintTop_toTopOf="@+id/adminBusStartTimeCreateET" />

    <TextView
        android:id="@+id/adminBusEndTimeCreateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Giờ đến"
        app:layout_constraintStart_toStartOf="@+id/adminBusStartTimeCreateTV"
        app:layout_constraintTop_toBottomOf="@+id/adminBusStartTimeCreateTV" />

    <EditText
        android:id="@+id/adminBusEndTimeET"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintStart_toStartOf="@+id/adminBusStartTimeCreateET"
        app:layout_constraintTop_toTopOf="@+id/adminBusEndTimeCreateTV" />

    <EditText
        android:id="@+id/editTextDate2"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintStart_toEndOf="@+id/adminBusEndTimeET"
        app:layout_constraintTop_toTopOf="@+id/adminBusEndTimeET" />

    <TextView
        android:id="@+id/adminBusImageLinkTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Hình ảnh"
        app:layout_constraintStart_toStartOf="@+id/adminBusEndTimeCreateTV"
        app:layout_constraintTop_toBottomOf="@+id/adminBusEndTimeCreateTV" />

    <EditText
        android:id="@+id/adminBusImageCreateET"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginTop="-8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/adminBusEndTimeET"
        app:layout_constraintTop_toTopOf="@+id/adminBusImageLinkTV" />

    <TextView
        android:id="@+id/adminBusPolicyCreateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Nội quy"
        app:layout_constraintStart_toStartOf="@+id/adminBusImageLinkTV"
        app:layout_constraintTop_toBottomOf="@+id/adminBusImageLinkTV" />

    <EditText
        android:id="@+id/adminBusPolicyCreateET"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="@+id/adminBusImageCreateET"
        app:layout_constraintTop_toTopOf="@+id/adminBusPolicyCreateTV" />

    <TextView
        android:id="@+id/adminBusNumsOfSeatCreateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Số chỗ"
        app:layout_constraintStart_toStartOf="@+id/adminBusPolicyCreateTV"
        app:layout_constraintTop_toBottomOf="@+id/adminBusTypeCreateTV" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/adminBusTypeCreateSpinner"
        app:layout_constraintTop_toTopOf="@+id/adminBusNumsOfSeatCreateTV" />

    <TextView
        android:id="@+id/adminBusTypeCreateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="52dp"
        android:text="Loại"
        app:layout_constraintStart_toStartOf="@+id/adminBusPolicyCreateTV"
        app:layout_constraintTop_toBottomOf="@+id/adminBusPolicyCreateTV" />

    <Spinner
        android:id="@+id/adminBusTypeCreateSpinner"
        android:layout_width="250dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="@+id/adminBusPolicyCreateET"
        app:layout_constraintTop_toTopOf="@+id/adminBusTypeCreateTV" />

    <TextView
        android:id="@+id/adminBusPriceCreateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Giá vé"
        app:layout_constraintStart_toStartOf="@+id/adminBusNumsOfSeatCreateTV"
        app:layout_constraintTop_toBottomOf="@+id/adminBusNumsOfSeatCreateTV" />

    <EditText
        android:id="@+id/adminBusPriceCreateET"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName4"
        app:layout_constraintTop_toTopOf="@+id/adminBusPriceCreateTV" />

</androidx.constraintlayout.widget.ConstraintLayout>