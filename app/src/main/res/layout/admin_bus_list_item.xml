<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <ImageView
        android:id="@+id/adminBusImgV"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/adminBusTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Bus Operator"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/adminBusImgV"
        app:layout_constraintTop_toTopOf="@+id/adminBusImgV" />

    <TextView
        android:id="@+id/adminBusStartPointTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Start point"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/adminBusTV"
        app:layout_constraintTop_toBottomOf="@+id/adminBusTV" />

    <TextView
        android:id="@+id/adminBusEndPointTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="End point"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/adminBusStartPointTV"
        app:layout_constraintTop_toBottomOf="@+id/adminBusStartPointTV" />

    <TextView
        android:id="@+id/adminBusTicketStartTimeTtile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Start time"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/adminBusEndPointTitle"
        app:layout_constraintTop_toBottomOf="@+id/adminBusEndPointTitle" />

    <TextView
        android:id="@+id/adminBusTicketEndTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="End time"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/adminBusTicketStartTimeTtile"
        app:layout_constraintTop_toBottomOf="@+id/adminBusTicketStartTimeTtile" />

    <TextView
        android:id="@+id/adminBusTicketPriceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Price"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/adminBusTV"
        app:layout_constraintTop_toBottomOf="@+id/adminBusTicketEndTimeTitle" />

    <Button
        android:id="@+id/adminBusDeleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/adminBusStartPointVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TP HCM"
        app:layout_constraintStart_toEndOf="@+id/adminBusStartPointTV"
        app:layout_constraintTop_toTopOf="@+id/adminBusStartPointTV" />

    <TextView
        android:id="@+id/adminBusTicketEndPointVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Ha Noi"
        app:layout_constraintStart_toEndOf="@+id/adminBusEndPointTitle"
        app:layout_constraintTop_toTopOf="@+id/adminBusEndPointTitle" />

    <TextView
        android:id="@+id/adminBusTicketStartTimeVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="15:00 13/04/2022"
        app:layout_constraintStart_toEndOf="@+id/adminBusTicketStartTimeTtile"
        app:layout_constraintTop_toTopOf="@+id/adminBusTicketStartTimeTtile" />

    <TextView
        android:id="@+id/adminBusTicketEndTimeVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="12:00 14/04/2022"
        app:layout_constraintStart_toEndOf="@+id/adminBusTicketEndTimeTitle"
        app:layout_constraintTop_toTopOf="@+id/adminBusTicketEndTimeTitle" />

    <TextView
        android:id="@+id/adminBusPriceVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="23000"
        app:layout_constraintStart_toEndOf="@+id/adminBusTicketPriceTitle"
        app:layout_constraintTop_toTopOf="@+id/adminBusTicketPriceTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>