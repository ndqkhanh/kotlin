<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"

    android:background="@drawable/textview_border"
    tools:context=".ticket_item">

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        >
        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="5dp"
            ></View>
        <LinearLayout
android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            >
            <TextView
                android:id="@+id/ticketName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ninh bình"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/ticketPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: 100.000đ"
                android:textSize="16sp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/ticketTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time: 1h"
                android:textSize="16sp"
                android:textColor="#000000"
                />
<!--            location -->
            <TextView
                android:id="@+id/ticketLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location: Ninh bình - 1h30"
                android:textSize="16sp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/ticketDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Destination: HCM - 2h30"
                android:textSize="16sp"
                android:textColor="#000000"
                />
            </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/actionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/info"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        >

        <Button
            android:id="@+id/details"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/corner_button"
            android:text="Details"
            android:textColor="#fff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buyTicket"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/corner_button"
            android:text="Buy"
            android:textColor="#fff"
            android:textSize="15sp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>