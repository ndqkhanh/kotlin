<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/logOutBtnAdminBlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnLogOut"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/blank"
            android:contentDescription="this is logout button"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logout_icon"
            app:tint="@color/button_color" />

        <TextView
            android:id="@+id/log_out_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Log out"
            android:textColor="@color/button_color"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAddBlog"
        android:layout_width="282dp"
        android:layout_height="49dp"
        android:layout_marginBottom="16dp"
        android:text="Add Blog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/adminBlogTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Blog Management"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logOutBtnAdminBlog" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/blogList"
        android:layout_width="409dp"
        android:layout_height="536dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddBlog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminBlogTV" />
</androidx.constraintlayout.widget.ConstraintLayout>